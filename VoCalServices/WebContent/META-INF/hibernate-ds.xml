<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
	
	<!-- The datasource is bound into JNDI at this location. We reference this 
		in META-INF/test-persistence.xml -->
	<datasource jndi-name="jdbc/vocalDB" pool-name="hibernateDB"
		enabled="true" use-java-context="true">
		<connection-url>jdbc:mysql://localhost:3306/vocaldb</connection-url>
		<driver>mysql-connector-java-5.1.26.jar</driver>
		<security>
			<user-name>root</user-name>
		</security>
	</datasource>
</datasources>